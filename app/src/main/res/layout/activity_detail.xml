<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/activity_detail"
        android:background="@color/yellwdesksYellow"
        >

        <TextView
            android:id="@+id/txt_hostdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:text="title"
            android:textColor="#f9e93e"
            android:textSize="15dip"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:background="@android:color/black"
            >
        </TextView>


        <android.support.v4.view.ViewPager
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="300dp" />



        <TextView
            android:id="@+id/textviewDetail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:text="title"
            android:textColor="@android:color/black"
            android:textSize="15dip"
            />

        <TextView
            android:id="@+id/tvOpeninghours"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:text="title"
            android:textColor="@android:color/black"
            android:textSize="15dip"
            />

        <TextView
            android:id="@+id/tvPrices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:text="title"
            android:textColor="@android:color/white"
            android:textSize="15dip"
            android:background="@android:color/black"

            />


        <TextView
            android:id="@+id/tvExtras"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:text="title"
            android:textColor="@android:color/black"
            android:textSize="15dip"
            />


        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:text="Check Availability And Prices"
            android:layout_width="match_parent"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:padding="6dp"
            android:weightSum="2"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Begin Date"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_weight="1"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_weight="1"
                android:textAlignment="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <DatePicker
                    android:id="@+id/dpFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:headerBackground="#ff0000"
                    android:datePickerMode="spinner"
                    >
                </DatePicker>
                <!-- android:datePickerMode="spinner": galaxy 5 compatibility -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <DatePicker
                    android:id="@+id/dpTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    >
                </DatePicker>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:text=""
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/yellwdesksBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvPricecalc" />

        <Button
            android:text="Next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btnNextStep"
            android:layout_weight="1"
            android:background="@color/yellwdesksBlack"
            android:textColor="@color/yellwdesksYellow"
            android:padding="6dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tvLoggedinas"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:linksClickable="true"
            />
    </LinearLayout>
</ScrollView>