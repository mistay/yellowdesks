<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/activity_detail"
        android:background="@color/yellwdesksYellow"
        >

        <TextView
            android:id="@+id/txt_hostdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:text="title"
            android:textColor="#f9e93e"
            android:textSize="15dip"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:background="@android:color/black"
            >
        </TextView>

        <VideoView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/vvHost"
            android:layout_height="200dp"
            android:layout_width="fill_parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20px" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:tools="http://schemas.android.com/tools"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:id="@+id/llimages"
            >

            <ImageView
                android:id="@+id/detailimage"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_centerVertical="true"
                android:layout_margin="0dp"
                android:scaleType="centerCrop"
                android:padding="0dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20px" />

        </LinearLayout>

        <TextView
            android:id="@+id/textviewDetail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:text="title"
            android:textColor="@android:color/black"
            android:textSize="15dip"
            />

        <TextView
            android:id="@+id/tvOpeninghours"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:text="title"
            android:textColor="@android:color/black"
            android:textSize="15dip"
            />

        <TextView
            android:id="@+id/tvPrices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:text="title"
            android:textColor="@android:color/white"
            android:textSize="15dip"
            android:background="@android:color/black"

            android:layout_below="@id/detailimage"
            />


        <TextView
            android:id="@+id/tvExtras"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:text="title"
            android:textColor="@android:color/black"
            android:textSize="15dip"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <DatePicker
                    android:id="@+id/dpFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:headerBackground="#ff0000"
                    android:datePickerMode="spinner"
                    >
                </DatePicker>
                <!-- android:datePickerMode="spinner": galaxy 5 compatibility -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <DatePicker
                    android:id="@+id/dpTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    >
                </DatePicker>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:text=""
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/yellwdesksBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvPricecalc" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <!--
            <Button
                android:text="send a request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSendRequest"
                android:layout_weight="1" />
    -->
            <Button
                android:text="Next"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/btnNextStep"
                android:layout_weight="1"
                android:background="@color/yellwdesksBlack"
                android:textColor="@color/yellwdesksYellow"
                />

            <Space
                android:layout_width="5px"
                android:layout_height="50dp"/>

            <ImageButton
                android:id="@+id/btnBacktomap"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/mapicon"
                android:background="#000000"
                />

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>
    </LinearLayout>
</ScrollView>